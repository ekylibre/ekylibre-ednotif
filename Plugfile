author "Nicolas Procureur <nprocureur@ekylibre.com>, Brice Texier <brice@ekylibre.com>"

name "ednotif"
version "0.1"

require_javascript 'synchronization_operations'

add_toolbar_addon 'backend/animals/import_cattling_inventory_toolbar', to: 'backend/animals#index'
# add_cobble_addon 'backend/shared/declaration', to: 'backend/parcels#show'

add_routes do
  namespace :backend do
    resources :synchronization_operations, concerns: [:list] do
      collection do
        get :list_calls
        post :import_cattling_inventory
      end
    end
  end
end

extend_navigation do
  part :production do
    group :animal_management do
      item :synchronization_operation do
        page "backend/synchronization_operations#index"
        page "backend/synchronization_operations#show"
      end
    end
  end
end
